{% comment %} START READ ONLY 1 {% endcomment %}
<div class="yotpo-readonly-start"></div>
<div class="main-form">
    <form class="form" action="{{ submit_url }}" method="get" target="_blank">
        {% for item in url_params %}
            <input type="hidden" name="{{ item[0] }}" value="{{ item[1] }}">
        {% endfor %}

        <table width="100%">
            <tr>
                <td width="3%"></td>
                <td width="94%" style="color: #fdc705; direction: ltr; text-align: center;">
                  <span class="stars_cont-top">
                      <span class="stars_radio_cont"><input class="stars_input_a" name="review_score" type="radio" value="1"> <label><span class="stars_input2">★</span></label></span>
                      <span class="stars_radio_cont"><input class="stars_input_b" name="review_score" type="radio" value="2"> <label><span class="stars_input2">★★</span></label></span>
                      <span class="stars_radio_cont"><input class="stars_input_c" name="review_score" type="radio" value="3"> <label><span class="stars_input2">★★★</span></label></span>
                  </span>
                  <span class="stars_cont-bottom">
                      <span class="stars_radio_cont"><input class="stars_input_d" name="review_score" type="radio" value="4"> <label><span class="stars_input2  avg" >★★★★</span></label></span>
                      <span class="stars_radio_cont"><input class="stars_input_e" name="review_score" type="radio" value="5" checked> <label><span class="stars_input2">★★★★★</span></label></span>
                 </span>
                </td>
                <td width="3%"></td>
            </tr>
        </table>

        <table width="100%">
            <tr>
                <td width="5%"></td>
                <td width="90%">
                    <table cellspacing="0" cellpadding="0" border="0" class="table1">
{% comment %} END READ ONLY 1 {% endcomment %}


                        <tr><td class="title3 yotpo-not-readonly">Write your review title here</td></tr>


{% comment %} START READ ONLY 2 {% endcomment %}
                        <tr><td><ul style="margin:0;padding:0;"><input class="text_filed" type="text" name="review_title"><br></ul></td></tr>
{% comment %} END READ ONLY 2 {% endcomment %}


                        <tr><td class="title3 yotpo-not-readonly" width="100%" height="23">Write your review here</td></tr>


{% comment %} START READ ONLY 3 {% endcomment %}
                        <tr><td><ul style="margin:0;padding:0;"><textarea class="textarea" name="review_content" cols="40" rows="5"></textarea><br></ul></td></tr>

                        {% if review_form_fields %}
                            {% comment %}
                              This is a little more complicated to include. I'll have to
                              figure out what the data looks like for this first. For now,
                              review_form_fields is just set to false.
                            {% endcomment %}
                            {% include 'review_custom_fields(readonly)' %}
                        {% endif %}

                        <tr> <td class="y-row-center"> <input type="submit"  value="POST"> </td></tr>
                    </table>
                </td>
                <td width="5%"></td>
            </tr>
        </table>
    </form>
</div>
<div class="yotpo-readonly-end"></div>
{% comment %} END READ ONLY 3 {% endcomment %}
